<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_item_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@mipmap/user_logo_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="14dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_item_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="颜艺学长"
            android:textColor="@color/text_hard_gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/user_item_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="声色犬马，各安天涯"
            android:textColor="@color/text_light_gray"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="6dp"
            android:background="@color/gray_dark_transparent" />

    </LinearLayout>
</LinearLayout>
