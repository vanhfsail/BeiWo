<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/common_title_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_setting_avatar"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:background="@drawable/item_normal_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_hard_gray"
                    android:textSize="16sp"
                    android:text="头像"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/setting_avatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/user_logo_default"
                    app:civ_border_width="0dp"
                    app:civ_border_color="@color/white"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/gray_dark_transparent"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_setting_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:clickable="true"
                android:background="@drawable/item_normal_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_hard_gray"
                    android:textSize="16sp"
                    android:text="昵称"/>
                <TextView
                    android:id="@+id/setting_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_hard_gray"
                    android:textSize="16sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/gray_dark_transparent"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_setting_sex"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:clickable="true"
                android:background="@drawable/item_normal_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_hard_gray"
                    android:textSize="16sp"
                    android:text="性别"/>
                <TextView
                    android:id="@+id/setting_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_hard_gray"
                    android:textSize="16sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/gray_dark_transparent"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_setting_age"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:clickable="true"
                android:background="@drawable/item_normal_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_hard_gray"
                    android:textSize="16sp"
                    android:text="年龄"/>
                <TextView
                    android:id="@+id/setting_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_hard_gray"
                    android:textSize="16sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/gray_dark_transparent"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_setting_signature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:clickable="true"
                android:background="@drawable/item_normal_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_hard_gray"
                    android:textSize="16sp"
                    android:text="个性签名"/>
                <TextView
                    android:id="@+id/setting_signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="96dp"
                    android:textColor="@color/text_hard_gray"
                    android:textSize="16sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/gray_dark_transparent"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_setting_clear_cache"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:clickable="true"
                android:background="@drawable/item_normal_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_hard_gray"
                    android:textSize="16sp"
                    android:text="清除缓存"/>
                <TextView
                    android:id="@+id/setting_cache_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_light_gray"
                    android:textSize="16sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/gray_dark_transparent"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_setting_about"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:clickable="true"
                android:background="@drawable/item_normal_selector">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_hard_gray"
                    android:textSize="16sp"
                    android:text="关于"/>
                <ImageView
                    android:src="@mipmap/top_bar_down_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/gray_dark_transparent"/>
            </RelativeLayout>

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/gray_round_white_filled_btn_selector"
                android:text="退出"
                android:textColor="@color/text_hard_gray"
                android:textSize="16sp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
